---
interface Props {
  title: string
}

const { title } = Astro.props
import { FixedHeader } from "@/components/fixed-header"
import { getLangFromUrl, useTranslations } from "@/i18n/utils"
import { siteConfig  } from "@/utils/config"

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="From December 16, 2023, to January 1, 2024, Wamians will jointly undertake a profound exploration of the future world, weaving a spectacular emergence, a prototype society of the future in Chiang Mai." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-[#ced8ff]">
    <FixedHeader client:only="react" />
    <main class="relative">
      <section class="2xl:min-h-[86vh]">
        <img src="/wamo-bg.jpg" class="absolute inset-0 -z-10 min-h-[40vh]" />

        <div
          class="container mx-auto flex flex-col items-center py-32 lg:py-28 xl:py-48 2xl:py-80 px-4"
        >
          <h1
            class="text-[#5270F9] font-bold text-4xl md:text-6xl xl:text-[110px] leading-tight lg:leading-relaxed"
          >
            WAMOTOPIA
          </h1>
          <h2
            class="text-[#5270F9] font-bold text-2xl md:text-3xl xl:text-[75px] leading-tight lg:leading-relaxed"
          >
            2023.12.16 ~ 2024.01.01
          </h2>

          <div class="flex flex-col md:flex-row gap-4 mt-8 px-8">
            <a
              href={siteConfig.createEvent}
              target="_blank"
              class="inline-flex justify-center w-60 rounded-md bg-[#FF856A] text-white text-base lg:text-2xl py-2 transition-opacity hover:opacity-90"
              >{t("hero.learn")}</a
            >
            <a
              href={siteConfig.applyToJoinForm}
              target="_blank"
              class="inline-flex justify-center w-60 rounded-md bg-[#375EFF] text-white text-base lg:text-2xl py-2 transition-opacity hover:opacity-90"
              >{t("hero.join")}</a
            >
          </div>
        </div>
      </section>

      <div class="bg-[#ced8ff] py-20 text-center px-12 sm:px-0 space-y-8">
        <h3 class="text-[#525E95] text-[22px]">
          {t("home.introduction")}
        </h3>
        <h3 class="text-[#525E95] text-[22px]">
          {t("home.sub-introduction")}
        </h3>
      </div>

      <iframe
        src="https://app.sola.day/wamo/schedule"
        frameborder="0"
        width="100%"
        class="h-screen"></iframe>

      <iframe
        src="https://app.sola.day/wamo/map"
        frameborder="0"
        width="100%"
        class="h-screen"></iframe>
    </main>

    <!-- Placeholder -->
    <footer></footer>
  </body>
</html>
